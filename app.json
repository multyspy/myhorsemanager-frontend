{
  "expo": {
    "name": "My Horse Manager",
    "slug": "my-horse-manager",
    "version": "1.2.8",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myhorsemanager",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "app.emergent.horse-app-i18nf9b82183",
      "buildNumber": "15",
      "infoPlist": {
        "NSCameraUsageDescription": "My Horse Manager necesita acceso a la cámara para que puedas tomar fotos de tus caballos y jinetes, que se guardarán en sus perfiles.",
        "NSPhotoLibraryUsageDescription": "My Horse Manager necesita acceso a tu galería de fotos para que puedas seleccionar imágenes de tus caballos y jinetes para añadir a sus perfiles.",
        "NSPhotoLibraryAddUsageDescription": "My Horse Manager necesita permiso para guardar fotos de tus caballos y jinetes en tu galería."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.myhorsemanager.app",
      "versionCode": 15,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FFFFFF"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
